{
    "tasks": [
        {
            "label": "create-build-folder",
            "type": "shell",
            "command": "mkdir -p .build",
            "group": "build"
        },
        {
            "label": "check",
            "type": "cppbuild",
            "dependsOn": ["create-build-folder"],
            "command": "g++",
            "args": [
                "-Werror",
                "-o",
                "./.build/spear_server",
                "-g",
                "$(find",
                "${workspaceFolder}",
                "-type",
                "f",
                "-iregex",
                "'.*\\.cpp')",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        },
        {
            "label": "build",
            "type": "cppbuild",
            "dependsOn": ["create-build-folder"],
            "command": "g++",
            "args": [
                "-Wall",
                "-o",
                "./.build/spear_server",
                "-g",
                "$(find",
                "${workspaceFolder}",
                "-type",
                "f",
                "-iregex",
                "'.*\\.cpp')",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        },
        {
            "label": "run",
            "command": "./.build/spear_server",
            "args": [
                "tun0",
                "10.10.0.2",
                "22333",
                "8.8.8.8"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        }
    ],
    "version": "2.0.0"
}